<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_viewgroup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_view_background"
    tools:context=".MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/cover_flow_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_gutter_margin"
        android:paddingLeft="@dimen/cover_art_view_pager_padding"
        android:paddingRight="@dimen/cover_art_view_pager_padding"
        app:layout_heightPercent="60%" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cover_flow_view_pager"
        android:layout_marginBottom="@dimen/material_text_gutter"
        android:layout_marginLeft="@dimen/material_gutter_margin"
        android:layout_marginRight="@dimen/material_gutter_margin"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_heightPercent="40%">

        <TextView
            android:id="@+id/current_track_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_text_gutter"
            android:singleLine="true"
            android:textSize="@dimen/abc_text_size_large_material" />

        <TextView
            android:id="@+id/current_track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_text_gutter"
            android:singleLine="true"
            android:textSize="@dimen/abc_text_size_headline_material"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/current_track_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_text_gutter"
            android:singleLine="true"
            android:textSize="@dimen/abc_text_size_large_material" />

    </LinearLayout>

</android.support.percent.PercentRelativeLayout>
